{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true
  },
  "exclude": [
    "./.idea",
    "./node_modules",
    "./*.iml",
    "./.DS_Store",
    "./dist/**/*.d.ts"
  ]
}
